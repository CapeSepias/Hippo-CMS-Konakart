<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <import resource="classpath*:org/onehippo/forge/konakart/site/service/konakart-engine-service-api.xml"/>

  <import resource="classpath*:org/hippoecm/hst/site/container/SpringComponentManager-pipelines.xml"/>


  <bean name="springSecurityValve" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject">
      <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject"
                  ref="org.hippoecm.hst.core.container.Pipelines"/>
        <property name="targetMethod" value="getPipeline"/>
        <property name="arguments">
          <value>DefaultSitePipeline</value>
        </property>
      </bean>
    </property>
    <property name="targetMethod" value="addInitializationValve"/>
    <property name="arguments">
      <bean class="org.onehippo.forge.security.support.springsecurity.container.SpringSecurityValve"/>
    </property>
  </bean>

  <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean" depends-on="springSecurityValve">
    <property name="targetObject">
      <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject"
                  ref="org.hippoecm.hst.core.container.Pipelines"/>
        <property name="targetMethod" value="getPipeline"/>
        <property name="arguments">
          <value>DefaultSitePipeline</value>
        </property>
      </bean>
    </property>
    <property name="targetMethod" value="addInitializationValve"/>
    <property name="arguments">
      <bean class="org.onehippo.forge.konakart.site.container.KonakartValve"/>
    </property>
  </bean>


</beans>